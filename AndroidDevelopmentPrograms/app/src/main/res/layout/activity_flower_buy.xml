<!--        first-->
        <CheckBox
            android:id="@+id/firstCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/pink"
            app:layout_constraintTop_toBottomOf="@id/hydrangeaImage"/>

        <ImageView
            android:id="@+id/first"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:src="@drawable/sunflower"
            app:layout_constraintTop_toBottomOf="@id/hydrangeaImage"
            app:layout_constraintStart_toEndOf="@id/firstCheck"
            app:layout_constraintWidth_percent=".5"
            android:padding="15dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/firstPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunflower\n\nâ‚¹10.0"
            app:layout_constraintStart_toEndOf="@id/first"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hydrangeaImage"
            app:layout_constraintBottom_toBottomOf="@id/first"
            app:layout_constraintVertical_bias="0.4"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textSize="20dp"/>

<!--        second-->
        <CheckBox
            android:id="@+id/secondCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/pink"
            app:layout_constraintTop_toBottomOf="@id/first"/>

        <ImageView
            android:id="@+id/second"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:src="@drawable/rose"
            app:layout_constraintTop_toBottomOf="@id/first"
            app:layout_constraintStart_toEndOf="@id/firstCheck"
            app:layout_constraintWidth_percent=".5"
            android:padding="15dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/secondPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Rose\n\nâ‚¹20.0"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toEndOf="@id/second"
            app:layout_constraintTop_toBottomOf="@id/first"
            app:layout_constraintVertical_bias="0.38" />

<!--        third-->
        <CheckBox
            android:id="@+id/thirdCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/pink"
            app:layout_constraintTop_toBottomOf="@id/second"/>

        <ImageView
            android:id="@+id/third"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:src="@drawable/lotus"
            app:layout_constraintTop_toBottomOf="@id/second"
            app:layout_constraintStart_toEndOf="@id/firstCheck"
            app:layout_constraintWidth_percent=".5"
            android:padding="15dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/thirdPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Lotus\n\nâ‚¹15.0"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/third"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toEndOf="@id/second"
            app:layout_constraintTop_toBottomOf="@id/second"
            app:layout_constraintVertical_bias="0.38" />

<!--        fourth-->
        <CheckBox
            android:id="@+id/fourthCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/pink"
            app:layout_constraintTop_toBottomOf="@id/third"/>

        <ImageView
            android:id="@+id/fourth"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:src="@drawable/lily"
            app:layout_constraintTop_toBottomOf="@id/third"
            app:layout_constraintStart_toEndOf="@id/firstCheck"
            app:layout_constraintWidth_percent=".5"
            android:padding="15dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/fourthPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Lily\n\nâ‚¹12.0"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/fourth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toEndOf="@id/second"
            app:layout_constraintTop_toTopOf="@id/fourth"
            app:layout_constraintVertical_bias="0.38" />

        <ImageButton
            android:id="@+id/buy"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/navy"/>

        <TextView
            android:id="@+id/buyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Now"
            app:layout_constraintStart_toStartOf="@id/buy"
            app:layout_constraintEnd_toEndOf="@id/buy"
            app:layout_constraintTop_toTopOf="@id/buy"
            app:layout_constraintBottom_toBottomOf="@id/buy"
            android:textColor="@color/white"
            android:textSize="25dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
