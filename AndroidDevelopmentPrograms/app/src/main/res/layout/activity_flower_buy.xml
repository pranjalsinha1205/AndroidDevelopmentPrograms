    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyblue"
        tools:context=".FlowerBuy">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Ardent FlowersðŸ’“"
            android:textSize="40dp"
            android:padding="10dp"
            android:background="@color/skyblue"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textStyle="italic"/>
        <ImageView
            android:id="@+id/sunflowerImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintWidth_percent=".33"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:src="@drawable/sunflower"
            android:background="@color/white"
            android:padding="15dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/roseImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintWidth_percent=".33"
            android:src="@drawable/rose"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:padding="15dp"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@id/sunflowerImage"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/lotusImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintWidth_percent=".33"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:src="@drawable/lotus"
            android:padding="15dp"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@id/roseImage"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/tulipImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintWidth_percent=".33"
            android:src="@drawable/tulip"
            app:layout_constraintTop_toBottomOf="@id/sunflowerImage"
            android:background="@color/white"
            android:padding="15dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/dahliaImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintWidth_percent=".33"
            android:background="@color/white"
            android:src="@drawable/dahlia"
            app:layout_constraintTop_toBottomOf="@id/sunflowerImage"
            app:layout_constraintStart_toEndOf="@id/tulipImage"
            android:padding="15dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/daffodilImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintWidth_percent=".33"
            android:src="@drawable/daffodil"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/sunflowerImage"
            app:layout_constraintStart_toEndOf="@id/dahliaImage"
            android:padding="15dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/hydrangeaImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintWidth_percent=".33"
            android:background="@color/white"
            android:src="@drawable/hydrangea"
            app:layout_constraintTop_toBottomOf="@id/tulipImage"
            android:padding="15dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/lilyImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintWidth_percent=".33"
            android:src="@drawable/lily"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tulipImage"
            app:layout_constraintStart_toEndOf="@id/hydrangeaImage"
            android:padding="15dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/orchidImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintWidth_percent=".33"
            android:background="@color/white"
            android:src="@drawable/orchid"
            app:layout_constraintTop_toBottomOf="@id/tulipImage"
            app:layout_constraintStart_toEndOf="@id/lilyImage"
            android:padding="15dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"/>

