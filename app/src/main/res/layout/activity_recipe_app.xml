<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeApp">

    <ImageButton
        android:id="@+id/breakfast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".12"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".9"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".2"
        android:src="@drawable/breakfast"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/lunch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/breakfast"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".9"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".2"
        android:src="@drawable/lunch"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/snacks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lunch"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".9"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".2"
        android:src="@drawable/snacks"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/dinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/snacks"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".9"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".2"
        android:src="@drawable/dinner"
        android:scaleType="fitXY"/>

</androidx.constraintlayout.widget.ConstraintLayout>