<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Portfolio">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:title="Pranjal Sinha"
        app:titleTextColor="@color/white"/>

    <ImageButton
        android:id="@+id/academics"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".48"
        app:layout_constraintHeight_percent=".28"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".03"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/academics"
        android:scaleType="fitXY"/>

<!--    <TextView-->
<!--        android:id="@+id/academics_text"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintStart_toStartOf="@id/academics"-->
<!--        app:layout_constraintEnd_toEndOf="@id/academics"-->
<!--        app:layout_constraintTop_toBottomOf="@id/academics"-->
<!--        android:text="Academics"/>-->

    <ImageButton
        android:id="@+id/certifications"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".48"
        app:layout_constraintHeight_percent=".28"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".03"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/certifications"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/hobbies"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".48"
        app:layout_constraintHeight_percent=".28"
        app:layout_constraintTop_toBottomOf="@id/academics"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".03"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/hobbies"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/projects"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".48"
        app:layout_constraintHeight_percent=".28"
        app:layout_constraintTop_toBottomOf="@id/certifications"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".03"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/projects"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/gallery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".48"
        app:layout_constraintHeight_percent=".28"
        app:layout_constraintTop_toBottomOf="@id/hobbies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".03"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/gallery"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/skills"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".48"
        app:layout_constraintHeight_percent=".28"
        app:layout_constraintTop_toBottomOf="@id/projects"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".03"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/skills"
        android:scaleType="fitXY"/>

</androidx.constraintlayout.widget.ConstraintLayout>